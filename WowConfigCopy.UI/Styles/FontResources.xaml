<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <FontFamily x:Key="SegoeUiFontFamily">Segoe UI</FontFamily>
    
    <Style x:Key="BaseFontStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SegoeUiFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="HeadingFontStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseFontStyle}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

</ResourceDictionary>