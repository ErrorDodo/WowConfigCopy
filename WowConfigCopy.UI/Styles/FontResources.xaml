<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <FontFamily x:Key="ZenKakuGothicAntiqueRegular">pack://application:,,,/Resources/#ZenKakuGothicAntique-Regular</FontFamily>
    <FontFamily x:Key="ZenKakuGothicAntiqueBold">pack://application:,,,/Resources/#ZenKakuGothicAntique-Bold</FontFamily>
    
    <Style x:Key="BaseFontStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource ZenKakuGothicAntiqueRegular}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="HeadingFontStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource ZenKakuGothicAntiqueBold}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
</ResourceDictionary>