<UserControl x:Class="WowConfigCopy.UI.UserControls.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WowConfigCopy.UI.UserControls"
             mc:Ignorable="d">
    <Menu Style="{StaticResource ModernMenuStyle}">
        <MenuItem Header="File" Style="{StaticResource ModernMenuItemStyle}" FontFamily="{StaticResource ZenKakuGothicAntiqueRegular}">
            <MenuItem Header="Save" Command="{Binding SaveCommand}" Style="{StaticResource ModernMenuItemStyle}" FontFamily="{StaticResource ZenKakuGothicAntiqueRegular}"/>
            <MenuItem Header="Settings" Command="{Binding NavigateCommand}" CommandParameter="Settings" Style="{StaticResource ModernMenuItemStyle}" FontFamily="{StaticResource ZenKakuGothicAntiqueRegular}"/>
        </MenuItem>
    </Menu>
</UserControl>